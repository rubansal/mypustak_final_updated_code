<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f8f8f8"
    tools:context=".Activity.donationlastpart">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/donationlastpart_toolbar"
            layout="@layout/general_toolbar" />

        <LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#f8f8f8"
            android:layout_below="@+id/donationlastpart_toolbar"
            android:orientation="vertical"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            tools:showIn="@layout/activity_donationform">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/steps2" />

            <View
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:background="@android:color/white"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"/>

            <Button
                android:id="@+id/makepayment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#008cff"
                android:layout_marginTop="10dp"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:text="OK, Let me make the payment"/>

            <Button
                android:id="@+id/notmakepayment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#000000"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:text="No thanks! Just pick up my books"/>

        </LinearLayout>

    </RelativeLayout>

</android.support.v4.widget.NestedScrollView>
